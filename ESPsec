-- Function to get all teams in the game
_G.function getTeamNames(): {string}
    _G.teamNames = {}
    for _, team in ipairs(Teams:GetTeams()) do
        if team.Name and team.Name ~= "Neutral" then
            table.insert(teamNames, team.Name)
        end
    end
    return teamNames
end

